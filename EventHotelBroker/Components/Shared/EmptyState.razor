@* Empty State Component *@
<div class="empty-state">
    <div class="empty-state-icon">
        @if (!string.IsNullOrEmpty(Icon))
        {
            <i class="bi bi-@Icon"></i>
        }
        else
        {
            <i class="bi bi-inbox"></i>
        }
    </div>
    <h3 class="empty-state-title">@Title</h3>
    <p class="empty-state-description">@Description</p>
    
    @if (!string.IsNullOrEmpty(ActionText))
    {
        <div class="empty-state-action">
            <button type="button" class="btn-system btn-system-primary" @onclick="OnActionClick">
                @if (!string.IsNullOrEmpty(ActionIcon))
                {
                    <i class="bi bi-@ActionIcon me-2"></i>
                }
                @ActionText
            </button>
        </div>
    }
    
    @if (SecondaryActionText != null)
    {
        <div class="empty-state-action mt-2">
            <button type="button" class="btn-system btn-system-ghost" @onclick="OnSecondaryActionClick">
                @SecondaryActionText
            </button>
        </div>
    }
</div>

@code {
    [Parameter] public string Icon { get; set; } = "inbox";
    [Parameter] public string Title { get; set; } = "No items found";
    [Parameter] public string Description { get; set; } = "Get started by creating a new item.";
    [Parameter] public string? ActionText { get; set; }
    [Parameter] public string? ActionIcon { get; set; }
    [Parameter] public EventCallback OnActionClick { get; set; }
    [Parameter] public string? SecondaryActionText { get; set; }
    [Parameter] public EventCallback OnSecondaryActionClick { get; set; }
}

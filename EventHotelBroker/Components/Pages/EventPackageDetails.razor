@page "/events/package/{id:int}"
@using EventHotelBroker.Models
@using EventHotelBroker.Services
@inject IEventService EventService
@inject NavigationManager Navigation

<PageTitle>@(package?.Name ?? "Package Details") - EventHotelBroker</PageTitle>

<link href="/css/events-module.css" rel="stylesheet" />

<div class="container-fluid px-4 py-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border spinner-modern text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading package details...</p>
        </div>
    }
    else if (package == null)
    {
        <div class="modern-card text-center py-5">
            <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
            <h3 class="mt-3">Package Not Found</h3>
            <p class="text-muted">The package you're looking for doesn't exist or has been removed.</p>
            <a href="/events" class="btn-modern btn-gradient-primary mt-3">
                <i class="bi bi-arrow-left me-2"></i>Back to Events
            </a>
        </div>
    }
    else
    {
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/events">Events</a></li>
                <li class="breadcrumb-item active">@package.Name</li>
            </ol>
        </nav>

        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <!-- Package Header -->
                <div class="modern-card mb-4">
                    @if (!string.IsNullOrEmpty(package.ImageUrl))
                    {
                        <img src="@package.ImageUrl" class="card-img-top" alt="@package.Name" 
                            style="max-height: 400px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="bg-gradient-primary text-white text-center py-5" style="background: var(--gradient-accent);">
                            <i class="bi bi-gift display-1"></i>
                        </div>
                    }
                    
                    <div class="modern-card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h1 class="mb-2">@package.Name</h1>
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge-modern badge-gradient-info">
                                        <i class="bi bi-tag me-1"></i>@package.PackageType
                                    </span>
                                    @if (package.IsFeatured)
                                    {
                                        <span class="badge-modern badge-gradient-accent">
                                            <i class="bi bi-star-fill me-1"></i>Featured
                                        </span>
                                    }
                                    @if (package.IsCustomizable)
                                    {
                                        <span class="badge-modern badge-gradient-success">
                                            <i class="bi bi-sliders me-1"></i>Customizable
                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="text-end">
                                @if (package.DiscountedPrice.HasValue)
                                {
                                    <div class="text-muted text-decoration-line-through">$@package.TotalPrice.ToString("N2")</div>
                                    <h2 class="text-primary mb-0">$@package.DiscountedPrice.Value.ToString("N2")</h2>
                                    <small class="text-success">
                                        <i class="bi bi-tag-fill"></i> Save $@((package.TotalPrice - package.DiscountedPrice.Value).ToString("N2"))
                                    </small>
                                }
                                else
                                {
                                    <h2 class="text-primary mb-0">$@package.TotalPrice.ToString("N2")</h2>
                                }
                            </div>
                        </div>

                        <hr />

                        <!-- Description -->
                        <div class="mb-4">
                            <h5 class="mb-3"><i class="bi bi-info-circle me-2"></i>About This Package</h5>
                            <p class="text-muted">@package.Description</p>
                        </div>

                        <!-- Guest Capacity -->
                        <div class="mb-4">
                            <h5 class="mb-3"><i class="bi bi-people me-2"></i>Guest Capacity</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 border rounded">
                                        <div class="me-3">
                                            <i class="bi bi-person-check display-6 text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="text-muted small">Minimum Guests</div>
                                            <h4 class="mb-0">@package.MinGuests</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center p-3 border rounded">
                                        <div class="me-3">
                                            <i class="bi bi-people-fill display-6 text-success"></i>
                                        </div>
                                        <div>
                                            <div class="text-muted small">Maximum Guests</div>
                                            <h4 class="mb-0">@package.MaxGuests</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Features -->
                        @if (!string.IsNullOrEmpty(package.Features))
                        {
                            <div class="mb-4">
                                <h5 class="mb-3"><i class="bi bi-check-circle me-2"></i>What's Included</h5>
                                <div class="row">
                                    @foreach (var feature in GetFeatures())
                                    {
                                        <div class="col-md-6 mb-2">
                                            <div class="d-flex align-items-start">
                                                <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                                                <span>@feature</span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Provider Info -->
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Professional Service:</strong> This package is provided by verified event professionals with years of experience.
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="modern-card">
                    <div class="modern-card-body">
                        <h5 class="mb-3"><i class="bi bi-question-circle me-2"></i>Important Information</h5>
                        <div class="accordion" id="packageInfoAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBooking">
                                        <i class="bi bi-calendar-check me-2"></i>Booking Process
                                    </button>
                                </h2>
                                <div id="collapseBooking" class="accordion-collapse collapse show" data-bs-parent="#packageInfoAccordion">
                                    <div class="accordion-body">
                                        <ol>
                                            <li>Select your event date and provide details</li>
                                            <li>Submit your booking request</li>
                                            <li>Our team will review and confirm availability</li>
                                            <li>Pay the deposit to secure your booking</li>
                                            <li>Finalize details closer to your event date</li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCustomization">
                                        <i class="bi bi-sliders me-2"></i>Customization Options
                                    </button>
                                </h2>
                                <div id="collapseCustomization" class="accordion-collapse collapse" data-bs-parent="#packageInfoAccordion">
                                    <div class="accordion-body">
                                        @if (package.IsCustomizable)
                                        {
                                            <p>This package can be customized to meet your specific needs:</p>
                                            <ul>
                                                <li>Add or remove equipment items</li>
                                                <li>Adjust quantities based on guest count</li>
                                                <li>Include additional services</li>
                                                <li>Modify setup and delivery times</li>
                                            </ul>
                                            <p class="mb-0"><strong>Note:</strong> Customizations may affect the final price.</p>
                                        }
                                        else
                                        {
                                            <p class="mb-0">This is a fixed package. For custom requirements, please contact us directly.</p>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCancellation">
                                        <i class="bi bi-x-circle me-2"></i>Cancellation Policy
                                    </button>
                                </h2>
                                <div id="collapseCancellation" class="accordion-collapse collapse" data-bs-parent="#packageInfoAccordion">
                                    <div class="accordion-body">
                                        <ul>
                                            <li><strong>30+ days before event:</strong> Full refund minus processing fee</li>
                                            <li><strong>15-29 days before:</strong> 50% refund</li>
                                            <li><strong>Less than 15 days:</strong> No refund, but can reschedule</li>
                                        </ul>
                                        <p class="mb-0 text-muted small">Terms and conditions apply. Contact us for special circumstances.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Booking Card -->
                <div class="modern-card sticky-top" style="top: 20px;">
                    <div class="modern-card-body">
                        <h5 class="mb-3">Book This Package</h5>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span>Package Price:</span>
                                @if (package.DiscountedPrice.HasValue)
                                {
                                    <strong class="text-primary">$@package.DiscountedPrice.Value.ToString("N2")</strong>
                                }
                                else
                                {
                                    <strong class="text-primary">$@package.TotalPrice.ToString("N2")</strong>
                                }
                            </div>
                            @if (package.DiscountedPrice.HasValue)
                            {
                                var savings = package.TotalPrice - package.DiscountedPrice.Value;
                                var percentage = (savings / package.TotalPrice) * 100;
                                <div class="alert alert-success py-2 mb-3">
                                    <small>
                                        <i class="bi bi-tag-fill me-1"></i>
                                        You save $@savings.ToString("N2") (@percentage.ToString("N0")% off)
                                    </small>
                                </div>
                            }
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <a href="/book-event?packageId=@package.Id" class="btn-modern btn-gradient-accent">
                                <i class="bi bi-calendar-check me-2"></i>Book Now
                            </a>
                            <button class="btn btn-outline-primary" @onclick="ContactProvider">
                                <i class="bi bi-chat-dots me-2"></i>Contact Provider
                            </button>
                        </div>

                        <hr />

                        <div class="small text-muted">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-shield-check text-success me-2"></i>
                                <span>Verified Provider</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-clock-history text-primary me-2"></i>
                                <span>Quick Response Time</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-award text-warning me-2"></i>
                                <span>Quality Guaranteed</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Share Card -->
                <div class="modern-card mt-4">
                    <div class="modern-card-body">
                        <h6 class="mb-3">Share This Package</h6>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary flex-fill" @onclick="SharePackage">
                                <i class="bi bi-share"></i>
                            </button>
                            <button class="btn btn-outline-danger flex-fill">
                                <i class="bi bi-heart"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private EventPackage? package;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPackage();
    }

    private async Task LoadPackage()
    {
        isLoading = true;
        try
        {
            package = await EventService.GetPackageByIdAsync(Id);
        }
        catch (Exception)
        {
            package = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private List<string> GetFeatures()
    {
        if (string.IsNullOrEmpty(package?.Features))
            return new List<string>();

        try
        {
            return System.Text.Json.JsonSerializer.Deserialize<List<string>>(package.Features) ?? new List<string>();
        }
        catch
        {
            return new List<string>();
        }
    }

    private void ContactProvider()
    {
        // In production, implement contact functionality
        Navigation.NavigateTo($"/book-event?packageId={package?.Id}");
    }

    private void SharePackage()
    {
        // In production, implement share functionality
    }
}

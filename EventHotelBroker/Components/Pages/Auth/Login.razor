@page "/login"
@using EventHotelBroker.Components.Layout
@using EventHotelBroker.Services
@layout AuthLayout
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject ToastService ToastService

<PageTitle>Login - EventHotelBroker</PageTitle>

<div class="auth-container">
    <!-- Back to Home Link -->
    <div class="text-center mb-3">
        <a href="/" class="text-white text-decoration-none">
            <i class="bi bi-arrow-left me-2"></i>Back to Home
        </a>
    </div>

    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-logo">
                <i class="bi bi-building-fill"></i>
            </div>
            <h2>Welcome Back</h2>
            <p>Sign in to your EventHotelBroker account</p>
        </div>

        <div class="auth-body">
            <div class="mb-3">
                <label class="form-label-system">Email Address</label>
                <input type="email" class="form-control-system" @bind="email" placeholder="you@example.com" />
            </div>

            <div class="mb-3">
                <label class="form-label-system">Password</label>
                <input type="password" class="form-control-system" @bind="password" placeholder="Enter your password" />
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="remember" @bind="rememberMe">
                    <label class="form-check-label" for="remember">
                        Remember me
                    </label>
                </div>
                <a href="/forgot-password" class="text-primary" style="text-decoration: none; font-size: 0.875rem;">
                    Forgot password?
                </a>
            </div>

            <button type="button" class="btn-system btn-system-primary btn-system-lg w-100 mb-3" @onclick="HandleLogin">
                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </button>

            <div class="text-center mb-3">
                <span class="text-muted">or continue with</span>
            </div>

            <div class="row g-2 mb-4">
                <div class="col-6">
                    <button type="button" class="btn-system btn-system-outline-secondary w-100" @onclick="GoogleLogin">
                        <i class="bi bi-google me-2"></i>Google
                    </button>
                </div>
                <div class="col-6">
                    <button type="button" class="btn-system btn-system-outline-secondary w-100" @onclick="FacebookLogin">
                        <i class="bi bi-facebook me-2"></i>Facebook
                    </button>
                </div>
            </div>

            <div class="text-center">
                <span class="text-muted">Don't have an account? </span>
                <a href="/register" class="text-primary fw-bold" style="text-decoration: none;">Sign up</a>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .auth-card {
        background: white;
        border-radius: 1.5rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        max-width: 450px;
        width: 100%;
        overflow: hidden;
    }

    .auth-header {
        text-align: center;
        padding: 3rem 2rem 2rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .auth-logo {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
    }

    .auth-header h2 {
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .auth-header p {
        color: #6c757d;
        margin-bottom: 0;
    }

    .auth-body {
        padding: 2rem;
    }
</style>

@code {
    private string email = "";
    private string password = "";
    private bool rememberMe = false;

    private async Task HandleLogin()
    {
        if (string.IsNullOrEmpty(email) || string.IsNullOrEmpty(password))
        {
            ToastService.ShowWarning("Missing Information", "Please enter your email and password");
            return;
        }

        ToastService.ShowSuccess("Login Successful!", "Welcome back to EventHotelBroker");
        
        // Simulate login - redirect to dashboard
        await Task.Delay(1000);
        Navigation.NavigateTo("/user/dashboard");
    }

    private void GoogleLogin()
    {
        ToastService.ShowInfo("Google Login", "Google authentication would be integrated here");
    }

    private void FacebookLogin()
    {
        ToastService.ShowInfo("Facebook Login", "Facebook authentication would be integrated here");
    }
}
